<?xml version="1.0"?>
<launch>
  <!-- <master auto="start"/>  -->
<!--   <param name="use_sim_time" value="true" /> -->
  <param name="simple_move_base_cfgfile" value="$(find mowerbot)/param/simple_move_base_params.yaml" />

  <!--   map_server -->
  <node pkg="map_server" type="map_server" name="map_server" args="$(find mowerbot)/map/map_sim.yaml"/>

  <!--   task manager, the clients for move base and line track -->
  <node pkg="mowerbot" type="task_manager.py" name="task_manager" output="screen" />

  <!--   gps localization -->
  <node pkg="mowerbot" type="gps_loc.py" name="gps_loc" output="screen" />

  <!--   move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find mowerbot)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find mowerbot)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find mowerbot)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find mowerbot)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find mowerbot)/param/base_local_planner_params.yaml" command="load" />
    <param name="planner_frequency" value="1" />
    <param name="controller_frequency" value="5" />
    <param name="controller_patience" value="15" />
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS" />
  </node>

  <!--   simple_move_base server -->
  <node pkg="mowerbot" type="simple_move_base_server.py" name="simple_move_base_server" output="screen" />

  <!--   webgui -->
  <node pkg="mowerbot" type="webgui.py" name="webgui" output="screen" />

  <!--   rviz -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find mowerbot)/rviz_cfg/task_nav.rviz"/>
</launch> 

